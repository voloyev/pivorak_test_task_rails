<h2>List of avaliable buses</h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          From
        </th>
        <th>
          Date from
        </th>
        <th>
          To
        </th>
        <th>
          Date to
        </th>
      </tr>
    </thead>
    <tbody>
      <%- @buses.each do |bus| %>
        <tr>
          <td><%= bus.name %></td>
          <td><%= bus.from %></td>
          <td><%= bus.date_and_time_from %></td>
          <td><%= bus.to %></td>
          <td><%= bus.date_and_time_to %></td>
          <td><%= link_to 'Show', bus, class:'btn btn-default' %></td>

          <br />
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
