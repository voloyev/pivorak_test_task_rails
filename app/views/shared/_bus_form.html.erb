<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @bus do |f| %>
      <%= f.label :from %>
      <%= f.text_field :from, class: 'form-control'  %>
      <br>

      <%= f.label :departure  %>
      <%= f.datetime_field :departure, class: 'form-control' %>
      <br>

      <%= f.label :to %>
      <%= f.text_field :to, class: 'form-control'  %>
      <br>
      <%= f.label :arrival  %>
      <%= f.datetime_field :arrival, class: 'form-control' %>
      <br>
      <%= f.label :seats %>
      <%= f.text_field :seats, class: 'form-control' %>
      <br>
      <p>
        <%= f.submit 'Create the bus', class: 'btn btn-primary' %>
      </p>
    <% end %>
  </div>
</div>
