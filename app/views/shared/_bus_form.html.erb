<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @bus do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>

      <%= f.label :from %>
      <%= f.text_field :from, class: 'form-control'  %>
      <br>

      <%= f.label :date_and_time_from  %>
      <%= f.datetime_field :date_and_time_from, class: 'form-control' %>
      <br>

      <%= f.label :to %>
      <%= f.text_field :to, class: 'form-control'  %>
      <br>
      <%= f.label :date_and_time_to  %>
      <%= f.datetime_field :date_and_time_to, class: 'form-control' %>
      <br>
      <p>
        <%= f.submit 'Create the bus', class: 'btn btn-primary' %>
      </p>
    <% end %>
  </div>
</div>
